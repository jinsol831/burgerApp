<div class = "container">
    <div class="jumbotron">
        <img src="https://mir-s3-cdn-cf.behance.net/project_modules/disp/721e0229910179.560a47226e30c.png"  width="400px" class="center">
       <link href="https://fonts.googleapis.com/css?family=Open+Sans|Poppins" rel="stylesheet">
        	<script src="/assets/js/burger.js" type="text/javascript"></script>
        <h1>EAT A BURGER!</h1>
    </div>
    <div class ="row">
        <div class="col-md-6 col-md-offset-3">
            <form class ="create-form" >
                    <div class="form-group">
                            <label for="specficid">submit a new buger!</label>
                            <input type="text" class="form-control" id="name" >
                    </div>
                    <button type="submit" id="submit">Submit</button>
                
            </form>
        </div>
    </div>
    
    <div class ="row">
        
        <div class = "col-md-6">
            <h1>Available Burgers</h1>
            <ul>
                {{#each burger}}
                    {{#unless devoured}}
                        <div>
                            {{!-- <form action ="/burger/{{this.id}}?_method=put"> --}}
                                <li>
                                    {{id}}.{{burger_name}}
                                </li>
                                {{!-- <input type="hidden" name="devoured" value="1">  --}}
                                <button id="eatburger" data-id="{{id}}" data-new-devoured="{{devoured}}">DEVOUR!</button>
                            {{!-- </form> --}}
                        </div>    
                    {{/unless}}    
                {{/each}}
            </ul>
        </div>
    
        <div class ="col-md-6">
            <h1>Out of Order</h1>
            <ul>
                {{#each burger}}
                    {{#if devoured}}
                        <div class="burgergone">
                            <li>{{this.burger_name}}</li>
                        </div>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    
</div>